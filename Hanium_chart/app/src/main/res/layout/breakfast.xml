<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TextView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Breakfast">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/black"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/breakfastTextView"
                android:layout_width="346dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/black"
                android:text=" 아침"

                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/backbtn_action"
                android:onClick="backBtn"
                android:src="@drawable/backbtn_action" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/breakfastTextView"
            android:background="@drawable/black"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mealTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 식사종류   "
                android:textSize="20dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="가정식" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="외식" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="식사 안함" />


            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/breakfastTextView"
            android:background="@drawable/black"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mealTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 식사 시간   "
                android:textSize="20dp" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:timePickerMode="spinner">


            </TimePicker>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/breakfastTextView"
            android:background="@drawable/black"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mealphotoTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 사진  "
                android:textSize="20dp" />


            <Button
                android:id="@+id/photoUploadBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="photoUploadBtn"
                android:text="+ 사진을 넣어주세요" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/breakfastTextView"
            android:background="@drawable/black"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mealTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 식단 항목   "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/recenItem"
                android:layout_width="186dp"
                android:layout_height="31dp"
                android:text="최근 음식"

                />


            <Button
                android:id="@+id/searchBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="searchBtn"
                android:text="검색" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/breakfastTextView"
            android:background="@drawable/black"
            android:orientation="horizontal">

            <Button
                android:id="@+id/storeBtn"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:text="입력 완료" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>